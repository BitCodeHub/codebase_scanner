# Backend Configuration
# Copy this file to .env and fill in the actual values

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_SERVICE_KEY=your-service-key

# Claude AI Configuration (Required for AI security analysis)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Environment
PYTHON_ENV=development

# CORS Origins (comma-separated)
CORS_ORIGINS=https://codebase-scanner-frontend.onrender.com,http://localhost:5173

# Celery Configuration (Optional - for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=your-secret-key-for-jwt-tokens

# Database Configuration (if not using Supabase directly)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# File Upload Configuration
MAX_UPLOAD_SIZE=50MB
ALLOWED_FILE_TYPES=.zip,.tar.gz,.apk

# Security Scanning Configuration
SCAN_TIMEOUT_SECONDS=300
MAX_CONCURRENT_SCANS=5

# AI Analysis Configuration
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.1
AI_MODEL=claude-3-5-sonnet-20241022